# Terraform Environment Variables for Jira Q Business Connector
# Copy this file to .env.terraform and update with your values
# Source this file before running terraform: source .env.terraform

# AWS Configuration
export AWS_PROFILE="poc"  # Change to your AWS profile name

# Container Configuration
export TF_VAR_container_image="your-account.dkr.ecr.us-east-1.amazonaws.com/jira-q-connector:latest"

# Jira Configuration (Sensitive)
export TF_VAR_jira_server_url="https://your-jira-server.company.com"
export TF_VAR_jira_username="your-jira-username"
export TF_VAR_jira_password="your-jira-password-or-api-token"

# Amazon Q Business Configuration (Sensitive)
export TF_VAR_q_application_id="your-q-application-id"
export TF_VAR_q_data_source_id="your-q-data-source-id"
export TF_VAR_q_index_id="your-q-index-id"

# Optional: Override defaults
# export TF_VAR_project_name="my-jira-connector"
# export TF_VAR_environment="staging"
# export TF_VAR_aws_region="us-west-2"
# export TF_VAR_sync_schedule="rate(6 hours)"
# export TF_VAR_enable_cache="false" 
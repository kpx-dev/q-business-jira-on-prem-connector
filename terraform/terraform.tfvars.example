# Example Terraform Variables File for Jira Q Business Connector
# Copy this file to terraform.tfvars and update with your values
#
# SECURITY NOTE: This file contains only non-sensitive configuration.
# For sensitive credentials, use environment variables via env.terraform.example

# Project Configuration
project_name = "jira-q-connector"
environment  = "prod"
aws_region   = "us-east-1"

# Container Configuration
container_image = "your-account.dkr.ecr.us-east-1.amazonaws.com/jira-q-connector:latest"
task_cpu        = 512   # 0.5 vCPU
task_memory     = 1024  # 1 GB RAM

# Networking - Option 1: Create new VPC
create_vpc = true
vpc_cidr   = "10.0.0.0/16"

# Networking - Option 2: Use existing VPC (set create_vpc = false)
# create_vpc          = false
# existing_vpc_id     = "vpc-12345678"
# existing_subnet_ids = ["subnet-12345678", "subnet-87654321"]

# Jira Configuration
jira_server_url = "https://your-jira-server.company.com"
jira_verify_ssl = true
jira_timeout    = 30

# NOTE: Sensitive credentials (jira_username, jira_password) should be set via environment variables
# See env.terraform.example for secure credential management

# Amazon Q Business Configuration
# NOTE: Sensitive IDs (q_application_id, q_data_source_id, q_index_id) should be set via environment variables
# See env.terraform.example for secure credential management

# Sync Configuration
sync_mode       = "full"  # or "incremental"
batch_size      = 10      # Max 10 for Q Business
include_comments = true
include_history  = false

# Filtering Configuration (Optional)
# projects     = ["PROJ1", "PROJ2", "PROJ3"]
# issue_types  = ["Bug", "Task", "Story"]
# jql_filter   = "status != \"Closed\" AND updated >= -7d"

# Caching Configuration
enable_cache     = true
cache_table_name = "jira-q-connector-cache"

# Scheduling Configuration
sync_schedule = "rate(1 hour)"  # Run every hour

# Alternative schedule examples:
# sync_schedule = "rate(6 hours)"        # Every 6 hours
# sync_schedule = "rate(1 day)"          # Daily
# sync_schedule = "cron(0 9 * * ? *)"    # Daily at 9 AM UTC
# sync_schedule = "cron(0 9 ? * MON-FRI *)" # Weekdays at 9 AM UTC

# Monitoring Configuration
log_retention_days = 30

# Additional Tags (Optional)
additional_tags = {
  Owner       = "data-team"
  CostCenter  = "engineering"
  Application = "knowledge-management"
}